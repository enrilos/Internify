@model EditUniversityFormModel

@{
    ViewData["Title"] = "Edit University";
}

<section class="row">
    <section class="col-md-6 offset-md-3">
        <h2 class="heading-margin text-center">@ViewData["Title"]</h2>

        <form method="post">
            <input asp-for="Id" type="hidden" />
            <section class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="WebsiteUrl"></label>
                <input asp-for="WebsiteUrl" class="form-control">
                <span asp-validation-for="WebsiteUrl" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="Founded"></label>
                <input asp-for="Founded" class="form-control">
                <span asp-validation-for="Founded" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Internify.Data.Models.Enums.Type>()" class="form-control"></select>
                <span asp-validation-for="Type" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="Description"></label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id="editor" })
                <span asp-validation-for="Description" class="small text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="CountryId"></label>

                <select asp-for="CountryId" class="form-control">

                    <option value="" selected> -- select country -- </option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }

                </select>

                <span asp-validation-for="CountryId" class="small text-danger"></span>

            </section>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Submit
            </button>

            <!-- Modal -->
            <section class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <section class="modal-dialog">
                    <section class="modal-content">
                        <section class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirm</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </section>
                        <section class="modal-body">
                            <p class="h5">Confirm new changes?</p>
                        </section>
                        <section class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <input class="btn btn-primary" type="submit" value="Submit" />
                        </section>
                    </section>
                </section>
            </section>
        </form>
    </section>
</section>

<script src="~/ckeditor/ckeditor.js"></script>
<link href="~/ckeditor/contents.css" ryle="stylesheet" />

<script>
    CKEDITOR.replace('editor', {
        height: 220
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}