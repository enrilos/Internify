@model AddInternshipFormModel

@{
    ViewData["Title"] = "Add Internship";
}

<section class="row">
    <section class="col-md-6 offset-md-3">
        <h2 class="heading-margin text-center">@ViewData["Title"]</h2>

        <form method="post">
            <input asp-for="CompanyId" type="hidden">
            <section class="form-group">
                <label asp-for="Role"></label>
                <input asp-for="Role" class="form-control">
                <span asp-validation-for="Role" class="small text-danger"></span>
            </section>
            <section class="form-check form-switch my-2">
                <label class="form-check-label" asp-for="IsPaid">Is Paid</label>
                <input class="form-check-input" type="checkbox" asp-for="IsPaid" id="isPaid">
            </section>
            <section class="form-group" id="salaryUSD" style="display: none;">
                <label asp-for="SalaryUSD"></label>
                <input asp-for="SalaryUSD" class="form-control">
                <span asp-validation-for="SalaryUSD" class="small text-danger"></span>
            </section>
            <section class="form-check form-switch my-2">
                <label class="form-check-label" asp-for="IsRemote">Is Remote</label>
                <input class="form-check-input" type="checkbox" asp-for="IsRemote" id="isRemote">
            </section>
            <section class="form-group">
                <label asp-for="Description"></label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                <span asp-validation-for="Description" class="small text-danger"></span>
            </section>
            <section class="form-group" id="countryId" style="display: block;">
                <label asp-for="CountryId"></label>

                <select asp-for="CountryId" class="form-control">

                    <option value="" selected> -- select country -- </option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }

                </select>

                <span asp-validation-for="CountryId" class="small text-danger"></span>

            </section>

            <input class="btn btn-primary mt-3" type="submit" value="Submit" />
        </form>

    </section>
</section>

<script>
    document.querySelector('#isPaid').addEventListener('change', () => {
        let salaryUSDSection = document.querySelector('#salaryUSD');

        if (salaryUSDSection.style.display === 'block') {
            salaryUSDSection.style.display = 'none';
        } else {
            salaryUSDSection.style.display = 'block';
        }
    });
    document.querySelector('#isRemote').addEventListener('change', () => {
        let countryIdSection = document.querySelector('#countryId');

        if (countryIdSection.style.display === 'block') {
            countryIdSection.style.display = 'none';
        } else {
            countryIdSection.style.display = 'block';
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}