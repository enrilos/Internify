@model ApplicationDetailsViewModel

@{
    ViewData["Title"] = "Application Details";
}

<section class="border border-dark rounded p-4" style="word-break: break-word;">
    <a class="btn btn-primary rounded m-1"
       asp-area="Candidate"
       asp-controller="Application"
       asp-action="Edit"
       asp-route-id="@Model.Id">Edit</a>

    <a class="btn btn-danger rounded m-1"
       asp-area="Candidate"
       asp-controller="Application"
       asp-action="Delete"
       asp-route-id="@Model.Id">Delete</a>

    <section class="container bd-highlight text-center">
        <article class="p2">
            <p>Role: 
                <a class="container-nav-title-content"
                asp-controller="Internship"
                asp-action="Details"
                asp-route-id="@Model.InternshipId">@Model.Role</a>
            </p>
            <p>Company: 
                <a class="container-nav-title-content"
                asp-controller="Company"
                asp-action="Details"
                asp-route-id="@Model.CompanyId">@Model.Company</a>
            </p>
            <p>@(@Model.ModifiedOn == null ? $"Created on: {@Model.CreatedOn}" : $"Modified on: {@Model.ModifiedOn}")</p>
        </article>
    </section>
    <article class="p-2 m-3 bg-light">
        <p class="text-center">@Model.CoverLetter</p>
    </article>
</section>
