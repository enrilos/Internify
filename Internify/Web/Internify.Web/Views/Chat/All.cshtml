@model IEnumerable<MessageListingViewModel>

<section class="container">
    <input type="hidden" id="userInput" value="@User.Email()" />
    <section class="text-center m-5 form-group">
        <label for="messageInput" class="h2">Post your message</label>
        <textarea class="form-control" rows="3" id="messageInput"></textarea>
    </section>
    <section class="text-center">
        <input type="button" class="btn btn-primary" id="sendButton" value="Send Message" />
    </section>
</section>

<section class="container">
    <ul id="messagesList">
        @foreach (var message in Model)
        {
            <li class="message-list-element">
                <p class="text-left"><strong>@message.SenderEmail</strong><span> at @message.SentOn</span></p>
                <p class="text-left">@message.Content</p>
            </li>
        }
    </ul>
</section>

@section Scripts {
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
}